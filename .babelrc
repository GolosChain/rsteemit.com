{
    "presets": ["env", "stage-2", "react"],
    "plugins": [
        "transform-regenerator",
        [
            "transform-runtime",
            {
                "helpers": true,
                "polyfill": true,
                "regenerator": true
            }
        ],
        [
            "babel-plugin-styled-components",
            {
                "ssr": true
            }
        ],
        "transform-decorators-legacy",
        "transform-export-extensions"
    ],
    "env": {
        "development": {
            "plugins": [
                [
                    "babel-plugin-styled-components",
                    {
                        "displayName": true
                    }
                ]
            ]
        },
        "production": {
            "presets": ["react-optimize"]
        }
    }
}
